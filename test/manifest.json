{
  "name": "KinoFree",
  "description": "Бесплатный доступ к фильмам и сериалам КиноПоиска",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "declarativeContent",
    "tabs"
  ],
  "commands": {
    "run-foo": {
      "suggested_key": {
        "default": "Ctrl+Comma"
      },
      "description": "Test action"
    }
  },
  "host_permissions": [
    "https://www.kinopoisk.ru/film/*",
    "https://www.kinopoisk.ru/series/*",
    "https://hd.kinopoisk.ru/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/logo16.png",
      "32": "/images/logo32.png",
      "48": "/images/logo48.png",
      "128": "/images/logo128.png"
    }
  },
  "icons": {
    "16": "/images/logo16.png",
    "32": "/images/logo32.png",
    "48": "/images/logo48.png",
    "128": "/images/logo128.png"
  }
}